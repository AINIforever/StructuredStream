create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='JsonTest'
);

CREATE TABLE jsonTable(
    name string,
    age int,
    hobby string
)WITH(
    type='json',
    processwindow='10 seconds,10 seconds',
    path='filepath/json'
);

CREATE TABLE jsonTable2(
    name string,
    age int,
    hobby string
)WITH(
    type='json',
    processwindow='10 seconds,10 seconds',
    path='filepath/json'
);

create SINK console(
)WITH(
    type='console',
    outputmode='append',
);

insert into console select * from jsonTable join jsonTable2 on jsonTable.name=jsonTable2.name;