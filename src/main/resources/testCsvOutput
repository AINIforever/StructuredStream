create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='csvtest'
);

CREATE TABLE InputTable(
    word int
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,5 seconds',
    watermark='30 seconds',
    port='9998'
);

create SINK csvOut(
)WITH(
    type='csv',
    outputmode='update',
    process='10s',
    path='path/to/destination/dir2'
);

insert into csvOut select * from inputTable;