create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='csvtest'
);

CREATE TABLE inputTable(
    word string
)WITH(
    type='socket',
    processwindow='10 seconds,10 seconds',
    watermark='10 seconds',
    host='localhost',
    port='9998'
);

create SINK csvOut(
)WITH(
    type='csv',
    outputmode='update',
    process='10s',
    path='path/to/destination/dir2'
);

insert into csvOut select * from inputTable;