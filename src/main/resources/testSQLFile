create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='WooTest'
);

CREATE TABLE InputTable(
    id int,
    name1 string
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,10 seconds',
    watermark='30 seconds',
    port='9999'
);

CREATE TABLE InputTable2(
    id int,
    name2 string
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,10 seconds',
    watermark='30 seconds',
    port='9998'
);

CREATE TABLE RandomIntTable(
    number Int
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,10 seconds',
    port='9999'
);

CREATE TABLE ImageTable(
    image string
)WITH(
    type='socket',
    host='localhost',
    port='9998'
);

CREATE TABLE kafkaTable(
    word string
)WITH(
    type='kafka',
    kafka.bootstrap.servers='localhost:9092',
    processwindow='10 seconds,10 seconds',
    subscribe='test2',
    group='test2'
);

CREATE SINK OutputTable(
)WITH(
    type='console',
    outputmode='update',
    continuetrigger='2 seconds'
);


CREATE SINK ImageOutputTable(
)WITH(
    type='image',
    outputmode='update'
);

CREATE SINK ImageOutputTable2(
)WITH(
    type='image',
    outputmode='append',
    continuetrigger='2 seconds'
);

insert into ImageOutputTable2 select word from kafkaTable;
