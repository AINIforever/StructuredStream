create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='WooTest'
);

CREATE TABLE InputTable(
    id int,
    name string
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,10 seconds',
    watermark='30 seconds',
    port='9998'
);

CREATE TABLE InputTable2(
    id int,
    name string
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,10 seconds',
    watermark='30 seconds',
    port='9999'
);

CREATE TABLE RandomIntTable(
    number int
)WITH(
    type='socket',
    host='localhost',
    processwindow='10 seconds,10 seconds',
    port='9999'
);

CREATE TABLE ImageTable(
    image string
)WITH(
    type='socket',
    host='localhost',
    delimiter=';',
    processwindow='1 seconds,1 seconds',
    port='9998'
);

CREATE SINK OutputTable(
)WITH(
    type='console',
    outputmode='Append',
    trigger='2 seconds'
);

CREATE SINK ImageOutputTable(
)WITH(
    type='image',
    outputmode='update'
);

insert into ImageOutputTable select * from ImageTable;
