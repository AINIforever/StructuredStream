create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='WooTest'
);

CREATE TABLE ImageSocketTable(
    image String,
    currentTime String
)WITH(
    type='socket',
    host='localhost',
    port='9998'
);

CREATE TABLE ImageKafkaTable(
    image String,
    currentTime String
)WITH(
    type='kafka',
    kafka.bootstrap.servers='localhost:9092',
    subscribe='test3',
    group='test3'
);

CREATE TABLE InputTable(
    number int
)WITH(
    type='socket',
    host='localhost',
    processwindow='2 seconds, 2 seconds',
    port='9999'
);

