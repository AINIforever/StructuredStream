create env spark(
    spark.default.parallelism='2',
    spark.sql.shuffle.partitions='2'
)WITH(
    appname='WooTest'
);

CREATE TABLE IntSocketTable(
    id int,
    name string
)WITH(
    type='socket',
    host='localhost',
    port='9998',
    processwindow='5 seconds,5 seconds'
);

CREATE TABLE IntSocketTable2(
    id int,
    name string
)WITH(
    type='socket',
    host='localhost',
    port='9999',
    processwindow='5 seconds,5 seconds'
);

CREATE TABLE ImageKafkaTable(
    image String,
    currentTime String
)WITH(
    type='kafka',
    kafka.bootstrap.servers='localhost:9092',
    subscribe='test3',
    group='test3'
);

CREATE SINK IntOutputTable(
)WITH(
    type='console',
    outputmode='append',
    trigger='2 seconds'
);

CREATE SINK ImageOutputTable(
)WITH(
    type='image',
    outputmode='append',
    continuetrigger='2 seconds'
);

CREATE SINK OutputTable(
)WITH(
    type='console',
    outputmode='update',
    trigger='2 seconds'
);

