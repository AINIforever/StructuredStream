    trigger='2 seconds'
);

CREATE SINK ImageOutputTable2(
)WITH(
    type='image',
    outputmode='append',
    continuetrigger='2 seconds'
);

CREATE SINK OutputTable(
)WITH(
    type='console',
    outputmode='update',
    trigger='2 seconds'
);

insert into OutputTable select * from InputTable;
